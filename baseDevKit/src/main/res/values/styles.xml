<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">serif</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaseTheme.BaseAppTheme">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BaseTheme.TranslucentStatusTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BaseDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--字体style-->
    <style name="text_style_smaller">
        <item name="android:textSize">@dimen/text_size_smaller</item>
        <item name="android:textColor">@color/color_common_text</item>
    </style>

    <style name="text_style_smaller_white">
        <item name="android:textSize">@dimen/text_size_smaller</item>
        <item name="android:textColor">@color/color_common_white</item>
    </style>

    <style name="text_style_small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/color_common_text</item>
    </style>

    <style name="text_style_small_white">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/color_common_white</item>
    </style>

    <style name="text_style_normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/color_common_text</item>
    </style>

    <style name="text_style_normal_white">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/color_common_white</item>
    </style>

    <style name="text_style_large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/color_common_text</item>
    </style>

    <style name="text_style_large_white">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/color_common_white</item>
    </style>

    <!-- media选择器 QQ数字风格样式，注意每一项都不能少-->
    <style name="picture.QQ.style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/color_common_white</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/color_common_white</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">true</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@mipmap/ic_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@mipmap/ic_orange_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@mipmap/ic_orange_arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/color_common_text</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/color_common_text</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/bg_selected_media_ckb</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/color_fa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/color_bluish_violet_purple</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/color_bluish_violet_purple</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/bg_selected_media_num</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/color_common_text</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/color_bluish_violet_purple</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/color_common_white</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/color_common_white</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@mipmap/ic_back</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/bar_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/bar_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/bg_bluish_violet_circle</item>
    </style>
</resources>
